<div class="col-12">
    <div class="card h-100">
        <h5 class="card-header text-info bg-secondary">Order {{oid}}</h5>
        <div class="card-body d-flex flex-column p-0 m-1">
            <table class="table table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Product Name</th>
                        <th scope="col">Image</th>
                        <th scope="col">Description</th>
                        <th scope="col">Unit Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Value</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each odList}}
                    <tr>
                        <td>{{this.ProName}}</td>
                        <td><img src="/pid/{{this.ProID}}/main.jpg" alt="{{this.ProID}}" style="height: 8em; width:8em"></td>
                        <td>{{this.TinyDes}}<br>{{{this.FullDes}}}</td>
                        <td>{{this.Price}}</td>
                        <td>{{this.Quantity}}</td>
                        <td>{{this.Amount}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="row my-5">
    {{> footer}}
</div>